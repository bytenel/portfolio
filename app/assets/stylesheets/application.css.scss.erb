@import "bootstrap";

#nav_container li:hover {
	background: #333;	
}

#nav_container li a {
	display: inline-block;
	color: #FFFFFF;
	padding: 20px 20px 20px 20px;
}

#main_content{
	margin-top: 45px;
}

#slideShow{
	margin-top: 20px;
	display: inline-block;
}

#slideShow img{
	cursor: pointer;
	max-height: 200px;
}

#sliderLeftArrow{
	background:url(<%= asset_path("glyphicons-halflings.png") %>) 0 0;	
	background-position: 232px 65px;
	height: 19px;
	width: 20px;
	display: none;
}

#sliderRightArrow{
	height: 19px;
	width: 20px;
	background:url(<%= asset_path("glyphicons-halflings.png") %>) 0 0;	
	background-position: 208px 65px;
	display: none;
}

#contactForm{
	width: 50%;	
}