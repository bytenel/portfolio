 var profile = angular.module('profile', []);

 main_controller = profile.controller('main', ['$scope', function($scope) {
 		$scope.slides = [
 			{
 				header: "Current Employer",
 				content: "Health Catalyst, Inc. is my current employer!",
 				link: "http://www.healthcatalyst.com",
 				image: "<%= asset_path 'slide-1-image.png' %>"
 			}
 		];
 	
 		$scope.index = 0;

 		$scope.selectedSlide = $scope.slides[$scope.index];

 		$scope.nextSlide = function(){
 			if($scope.slides[$scope.index + 1] == undefined)
 			{
 				$scope.index = 0;
 			}else{
		 		$scope.index = $scope.index + 1;
 			}

	 		$scope.selectedSlide = $scope.slides[$scope.index];
 		console.log(this);
 		};

 		$scope.previousSlide = function(){
 			if($scope.slides[$scope.index - 1] == undefined)
 			{
 				$scope.index = 0;
 			}else{
		 		$scope.index = $scope.index - 1;
 			}

 		console.log(this);
	 		$scope.selectedSlide = $scope.slides[$scope.index];
 		};
 }]);
